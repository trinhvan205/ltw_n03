@model Student

@{
    ViewData["Title"] = "Thêm sinh viên";
}

<h2>@ViewData["Title"]</h2>

<form action="/Admin/Student/Add" method="post" class="mt-3" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <!-- Top error block: show ModelState errors collected by controller (ViewBag.ModelErrors) and summary -->
    @if (ViewBag.ModelErrors != null)
    {
        <div class="alert alert-danger">
            <strong>Vui lòng sửa các lỗi bên dưới:</strong>
            <ul>
                @foreach (var e in (IEnumerable<dynamic>)ViewBag.ModelErrors)
                {
                    foreach (var m in e.Messages)
                    {
                        <li>@m</li>
                    }
                }
            </ul>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row mt-2">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Họ tên" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <!-- password is intentionally rendered as password input; browser will not keep value after post -->
            <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" autocomplete="new-password" />
            <small class="form-text text-muted">
                Mật khẩu: tối thiểu 8 ký tự, phải có chữ hoa, chữ thường, chữ số và ký tự đặc biệt.
            </small>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Branch" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Branch" asp-items="ViewBag.AllBranches" class="form-control"></select>
            <span asp-validation-for="Branch" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="IsRegular" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="checkbox" class="form-check-input" asp-for="IsRegular" />
            <span asp-validation-for="IsRegular" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DateOfBirth" class="form-control" type="date" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @foreach (var gender in ViewBag.AllGenders)
            {
                <label class="radio-inline mr-2">
                    <input type="radio" asp-for="Gender" value="@gender" /> @gender
                </label>
            }
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Address" class="form-control" placeholder="Địa chỉ"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label asp-for="Score" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Score" class="form-control" type="number" step="0.1" min="0" max="10" />
            <span asp-validation-for="Score" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-2">
        <label class="col-sm-2 col-form-label">Ảnh</label>
        <div class="col-sm-10">
            <input type="file" name="photo" class="form-control" accept="image/*" />
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}