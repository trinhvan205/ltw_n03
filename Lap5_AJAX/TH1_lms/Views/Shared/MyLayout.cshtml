<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link href="~/lib/sb-admin-2/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/sb-admin-2/css/sb-admin-2.min.css" rel="stylesheet" />
</head>

<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        @* @await Html.PartialAsync("LeftMenu") *@
        <partial name="LeftMenu" />

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <!-- Topbar -->
                @* @await Html.PartialAsync("TopNav") *@
                <partial name="TopNav" />

                <!-- Main Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            @* @await Html.PartialAsync("Footer") *@
            <partial name="Footer" />
        </div>
    </div>

    <!-- Script -->
    <script src="~/lib/sb-admin-2/vendor/jquery/jquery.min.js"></script>
    <script src="~/lib/sb-admin-2/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sb-admin-2/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/lib/sb-admin-2/js/sb-admin-2.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
