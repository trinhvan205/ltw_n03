@model Student

<div class="container mt-3">
    <form asp-controller="Student" asp-action="Create" method="post">

        <div class="form-group row mt-3">
            <label asp-for="Name" class="col-sm-2 col-form-label">Họ tên</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Họ tên" />
            </div>
        </div>

        <div class="form-group row mt-3">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email" />
            </div>
        </div>

        <div class="form-group row mt-3">
            <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            </div>
        </div>

        <div class="form-group row mt-3">
            <label asp-for="Branch" class="col-sm-2 col-form-label">Ngành</label>
            <div class="col-sm-10">
                <select asp-for="Branch" class="custom-select"
                        asp-items="Html.GetEnumSelectList<Branch>()"></select>
            </div>
        </div>

        <div class="form-group form-check mt-3">
            <input asp-for="IsRegular" class="form-check-input" />
            <label asp-for="IsRegular" class="form-check-label">Chính quy</label>
        </div>

        <div class="form-group row mt-3">
            <label asp-for="DateOfBirth" class="col-sm-2 col-form-label">Ngày sinh</label>
            <div class="col-sm-10">
                <input asp-for="DateOfBirth" type="date" class="form-control" />
            </div>
        </div>

        <div class="form-group row mt-3">
            <label class="col-sm-2 col-form-label">Giới tính</label>
            <div class="col-sm-10">
                @foreach (var gender in ViewBag.AllGenders)
                {
                    <div class="form-check form-check-inline">
                        <input type="radio" asp-for="Gender" class="form-check-input"
                               value="@gender" id="gender_@gender" />
                        <label class="form-check-label" for="gender_@gender">@gender</label>
                    </div>
                }
            </div>
        </div>

        <div class="form-group row mt-3">
            <label asp-for="Address" class="col-sm-2 col-form-label">Địa chỉ</label>
            <div class="col-sm-10">
                <textarea asp-for="Address" class="form-control" placeholder="Địa chỉ"></textarea>
            </div>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>

    </form>
</div>
